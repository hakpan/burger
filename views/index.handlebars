<div class="container">
	<div class="row">
		 <div class="col-sm-6 text-center">
		 {{#each burger_data}}
			{{#unless this.devoured}}
				<div class="col-xs text-center">
					<pre>{{this.id}}. {{this.burger_name}}</pre>
				
				
				<form method="POST" action="/burger/update?_method=PUT" class="button-size">
				<input type="hidden" name="burger_id" type"text" value={{this.id}}>
				<br>
				<button type="submit" class="btn btn-danger">DEVOUR IT!</button>
				</form>
				</div>
			
			{{/unless}}
		{{/each}}
		 </div>

		 <div class="col-sm-6 text-center">
		 {{#each burger_data}}
				{{#if this.devoured}}
					<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
				{{/if}}
			{{/each}}
		 </div>
	</div>
</div>

<br><br>

<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <p>Enter fave burger!</p>
		<form action="/burger/create" method="POST">
			<input type="text" name="burger_name" class="form-control mr-sm-2" value="" id="enter_text">
			<button type="submit" class="btn btn-primary btn-block" id="text-enter-button">Submit</button>
		</form>
    </div>
   </div>
</div>



